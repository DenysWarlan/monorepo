{
  "ts-node": {
    "compilerOptions": {
      "module": "esnext"
    }
  },
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "esnext",
    "experimentalDecorators": true,
    "target": "ES2022",
    "useDefineForClassFields": false,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "lib": ["es2018", "dom"],
    "paths": {
      "@library-api/*": ["apps/library-api/src"],
      "@library-web/*": ["apps/library-web/src"],
      "@monorepo/auth/data-access": ["libs/auth/data-access/src/index.ts"],
      "@monorepo/auth/login": ["libs/auth/login/src/index.ts"],
      "@monorepo/auth/register": ["libs/auth/register/src/index.ts"],
      "@monorepo/books/categories": ["libs/books/categories/src/index.ts"],
      "@monorepo/books/data-access": ["libs/books/data-access/src/index.ts"],
      "@monorepo/books/details": ["libs/books/details/src/index.ts"],
      "@monorepo/books/list": ["libs/books/list/src/index.ts"],
      "@monorepo/books/search": ["libs/books/search/src/index.ts"],
      "@monorepo/error-form": ["libs/error-form/src/index.ts"],
      "@monorepo/navigation": ["libs/navigation/src/index.ts"],
      "@monorepo/page-not-found": ["libs/page-not-found/src/index.ts"],
      "@monorepo/profile/favorite": ["libs/profile/favorite/src/index.ts"],
      "@monorepo/profile/settings": ["libs/profile/settings/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "rootDir": "."
}
